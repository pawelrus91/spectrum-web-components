{
    "name": "documentation",
    "private": true,
    "version": "0.0.1",
    "description": "The documentation site for Spectrum Web Components",
    "main": "index.js",
    "scripts": {
        "build-search-index": "node scripts/build-search-index.js",
        "copy-docs": "node scripts/copy-component-docs.js",
        "prebuild": "rimraf _site && rimraf dist && mkdir dist && cp content/favicon.ico dist && yarn copy-docs",
        "build": "yarn build:tsc && yarn build-search-index && yarn build:css && eleventy && yarn build:rollup && yarn build:manifest",
        "build:production": "ELEVENTY_ENV=production yarn build",
        "build:tsc": "tsc --build tsconfig.json",
        "build:css": "cd src/components && postcss *.css -d ../../_site/src/components/",
        "postbuild:css": "cp _site/src/components/markdown.css dist/markdown.css && cp _site/src/components/home.css dist/home.css",
        "build:rollup": "rollup -c rollup.config.js",
        "build:manifest": "cp -r _site/images/ dist/images && cp _site/manifest.webmanifest dist/manifest.webmanifest"
    },
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {},
    "devDependencies": {
        "@11ty/eleventy": "^0.10.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
        "@open-wc/building-rollup": "^0.22.11",
        "@open-wc/rollup-plugin-html": "^0.3.6",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-replace": "^2.3.1",
        "es-dev-server": "^1.45.1",
        "postcss-cli": "^7.1.0",
        "posthtml": "^0.12.0",
        "posthtml-attrs-parser": "^0.1.1",
        "posthtml-match-helper": "^1.0.1",
        "posthtml-transform": "^1.0.7",
        "rimraf": "^3.0.2",
        "rollup": "^2.0.6",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-lit-css": "^2.0.1",
        "rollup-plugin-postcss": "^2.5.0",
        "rollup-plugin-posthtml": "^1.0.1",
        "rollup-pluginutils": "^2.8.2",
        "rollup-plugin-workbox": "^5.0.1",
        "rollup-plugin-visualizer": "^3.3.2",
        "workbox-build": "^5.1.2"
    }
}
